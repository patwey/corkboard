<div class="container">
  <div class="flash row">
  </div>
  <!-- project title -->
  <div class="row">
    <div class="col-md-6">
      <h1 id="repo-name"><%= "#{current_user.username}/#{@repo_name}" %></h1>
    </div>

    <!-- add issue button -->
    <div class="add-issue text-right col-md-6">
      <a class="add-issue-btn btn btn-default add-issue-btn" data-toggle="modal"
         data-target="#new-issue" role="button">
         <span class="glyphicon glyphicon-pushpin"></span> Add Issue</a>
    </div>
  </div>

  <!-- modal -->
  <div class="modal fade" id="new-issue" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- modal header -->
        <div class="modal-header">
          <button type="button" class="close"
                  data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">
            Add an Issue
          </h4>
        </div>

        <!-- modal body -->
        <div class="modal-body">
          <form role="form">
            <div class="form-group">
              <label for="title">Title</label>
              <input class="form-control" id="issue-title"/>
            </div>

            <div class="form-group">
              <label for="issue-description">Description (optional)</label>
              <textarea class="form-control" id="issue-description" rows="4"></textarea>
            </div>

            <div class="form-group">
              <label for="issue-label">Label:</label>
              <select id="issue-label" class="form-control">
                <option disabled selected></option>
                <option value="enhancement">Enhancement</option>
                <option value="bug">Bug</option>
                <option value="help wanted">Help Wanted</option>
              </select>
            </div>

            <div class="text-right">
              <button type="button" class="btn btn-default"
                      data-dismiss="modal">
                Close
              </button>
              <input value="Add Issue" type="submit" data-dismiss="modal" class="btn btn-default" id="submit-issue"/>
            </div>
          </form>
        </div>

        </div>
      </div>
  </div>

  <br>

  <!-- column names -->
  <div class="">
    <div class="categories row-eq-height">
      <div class="col-md-4 backlog-header">
        <h3 class="text-center">Backlog</h3>
      </div>

      <div class="col-md-4">
        <h3 class="text-center">In Progress</h3>
      </div>

      <div class="col-md-4 complete-header">
        <h3 class="text-center">Complete</h3>
      </div>
    </div>
  </div>

  <!-- cards -->
  <div class="issues cards row-eq-height">
    <div id="backlog" class="col-md-4 issues">
      <div class="spinner text-center">
        <br>
        <i class="fa fa-refresh fa-spin"></i>
      </div>
    </div>

    <div id="in-progress" class="col-md-4 issues">
      <div class="spinner text-center">
        <br>
        <i class="fa fa-refresh fa-spin"></i>
      </div>
    </div>

    <div id="complete" class="col-md-4 issues">
      <div class="spinner text-center">
        <br>
        <i class="fa fa-refresh fa-spin"></i>
      </div>
    </div>
  </div>
</div>
